[core]
	editor = nvim
  ; pager = bat
	fsmonitor = true
	untrackedcache = true
	commitgraph = true
	autocrlf = true
	preloadindex = true
	sshCommand = C:/Windows/System32/OpenSSH/ssh.exe

[gc]
  auto = 8000

[pack]
  threads = 0
  packSizeLimit = 2g
; [feature]
; 	manyFiles = true
;
[fetch]
	writeCommitGraph = true
	parallel = 4

[commit]
	verbose = true

[credential]
	helper = cache

[show]
	UntrackedFiles = true

[push]
	autoSetupRemote = true

[log]
  date = relative

[format]
  pretty = format:%h %Cblue%ad%Creset %ae %Cgreen%s%Creset
  ; pretty = format:%C(auto,yellow)%h%C(auto,magenta)% G? %C(auto,blue)%>(12,trunc)%ad %C(auto,green)%<(7,trunc)%aN%C(auto,reset)%s%C(auto,red)% gD% D
  ; pretty = format:"%C(yellow)%h %ar %C(auto)%d %Creset %s , %Cblue%cn" --graph --all'

[include]
	path = ~/.gitconfig.local

; [diff]
	; algorithm = histogram

[merge]
    tool = nvimdiff

[mergetool]
    prompt = true

[mergetool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\" \"$MERGED\" -c 'wincmd w' -c 'wincmd J'"

; Delta
[diff]
  colorMoved = default

[core]
  pager = delta

[merge]
  conflictstyle = zdiff3

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true  # use n and N to move between diff sections
  light = true      # or light = true, or omit for auto-detection
  hyperlinks = true
  true-color = always
  side-by-side = true
  line-numbers = true
  ; line-numbers-left-format = ""
  ; line-numbers-right-format = "â”‚ "
  ; map-styles = bold purple => syntax magenta, bold cyan => syntax blue
  ; features = GitHub zebra-light
  features = GitHub zebra-light
  ; hunk-header-decoration-style = ul
  ; hunk-header-style = raw
  hunk-header-decoration-style = box

; [delta "my-color-moved-theme"]
;     git-moved-from-style = bold purple     # An ad-hoc named style (must end in "-style")
;
;     map-styles = "my-color-moved-theme.git-moved-from-style => red #cccccc, \
;                   bold cyan => syntax #cccccc"
;
    # we could also have defined git-moved-to-style = bold cyan
    #
    #
[delta "zebra-light"]
    minus-style = syntax "#fbdada"
    minus-emph-style = syntax "#f6b6b6"
    plus-style = syntax "#d6ffd6"
    plus-emph-style = syntax "#adffad"

    map-styles = \
       bold purple => syntax "#feecf7", \
       bold blue => syntax "#e5dff6", \
       bold cyan => syntax "#d8fdf6", \
       bold yellow => syntax "#f4ffe0"

    zero-style = syntax
    whitespace-error-style = "#aaaaaa"
