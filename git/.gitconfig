[core]
	editor = nvim
  ; pager = bat
	fsmonitor = true
	untrackedcache = true
	commitGraph = true
	autocrlf = true
	preloadindex = true
	sshCommand = C:/Windows/System32/OpenSSH/ssh.exe
	whitespace = error

[status]
	branch = true
	showStash = true
	showUntrackedFiles = all
	sort = -committerdate

[tag]
	sort = -taggerdate

[gc]
  auto = 8000
	writeCommitGraph = true

[pack]
  threads = 0
  packSizeLimit = 2g
; [feature]
; 	manyFiles = true
;
[fetch]
	writeCommitGraph = true
	parallel = 4

[commit]
	verbose = true

[credential]
	helper = cache

[show]
	UntrackedFiles = true

[push]
	autoSetupRemote = true
	default = current
	followTags = true

[pull]
	default = current
	rebase = true

[rebase]
	autoStash = true
	missingCommitsCheck = warn

[log]
  date = relative
	abbrevCommit = true
	graphColors = blue,yellow,cyan,magenta,green,red

[color "decorate"]
	HEAD = red
	branch = blue
	tag = yellow
	remoteBranch = magenta

[color "branch"]
	current = magenta
	local = default
	remote = yellow
	upstream = green
	plain = blue

[format]
	pretty = format:%C(yellow)%h %C(blue) %an %C(magenta)%ar %D%n%s%n

[include]
	path = ~/.gitconfig.local

[merge]
    tool = nvimdiff

[mergetool]
    prompt = true

[mergetool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\" \"$MERGED\" -c 'wincmd w' -c 'wincmd J'"

; Delta
[diff]
  colorMoved = default
	algorithm = histogram
	interHunkContext = 10

[core]
  pager = delta

; [pager]
; 	branch = false
; 	tag = false

[merge]
  conflictstyle = zdiff3

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true  # use n and N to move between diff sections
  light = true      # or light = true, or omit for auto-detection
  hyperlinks = true
  true-color = always
  side-by-side = true
  line-numbers = true
  ; line-numbers-left-format = ""
  ; line-numbers-right-format = "â”‚ "
  ; map-styles = bold purple => syntax magenta, bold cyan => syntax blue
  ; features = GitHub zebra-light
  features = GitHub zebra-light
  ; hunk-header-decoration-style = ul
  ; hunk-header-style = raw
  hunk-header-decoration-style = box

